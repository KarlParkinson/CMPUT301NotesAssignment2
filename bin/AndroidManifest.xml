<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kparkins_notes"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:name="com.example.kparkins_notes.GlobalClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.kparkins_notes.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kparkins_notes.NewLogActivity"
            android:label="@string/title_activity_new_log" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kparkins_notes.MainActivity" />
        </activity>
        <activity
            android:name="com.example.kparkins_notes.NoteActivity"
            android:label="@string/title_activity_note" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kparkins_notes.MainActivity" />
        </activity>
        <activity
            android:name="com.example.kparkins_notes.WordCloudActivity"
            android:label="@string/title_activity_word_cloud" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kparkins_notes.MainActivity" />
        </activity>
    </application>

</manifest>
